<mah:MetroWindow    x:Class="DeviantartDownloader.Views.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:DeviantartDownloader"
                    xmlns:vm="clr-namespace:DeviantartDownloader.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
                    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                    Dialog:DialogParticipation.Register="{Binding}"
                    mc:Ignorable="d"
                    Icon="/Icon/Icon.ico" ShowIconOnTitleBar="False"
                    Title="Deviantart Downloader" MinHeight="750" MinWidth="1000"
                    Background="#d4dfd0" WindowTitleBrush="#06070d"
                    WindowStartupLocation="CenterScreen" BorderBrush="Black">
    <mah:MetroWindow.Resources>
        <CollectionViewSource x:Key="downloadViewItems" Source="{Binding DownloadList}"/>
    </mah:MetroWindow.Resources>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Command="{Binding ToDeviantartCommand}"
                    Cursor="Hand"
                    ToolTip="Deviantart"
                    Content="">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome  Kind="DeviantartBrands"
                                                            Foreground="#00e59b"
                                                            Width="25" Height="25"
                                                            VerticalAlignment="Center"/>
                            <TextBlock  Margin="4 0 0 0"
                                        VerticalAlignment="Center"
                                        Text=""/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Command="{Binding ShowSettingDialogCommand}"
                    Cursor="Hand"
                    ToolTip="Setting"
                    Content="">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome  Kind="WrenchSolid"
                                                            Width="22" Height="22"
                                                            VerticalAlignment="Center"/>
                            <TextBlock  Margin="4 0 0 0"
                                        VerticalAlignment="Center"
                                        Text="" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Command="{Binding ShowKeySettingDialogCommand}"
                    Cursor="Hand"
                    ToolTip="Setting"
                    Content=""> 
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome  Kind="KeySolid"
                                                Width="22" Height="22"
                                                VerticalAlignment="Center"/>
                            <TextBlock  Margin="4 0 0 0"
                            VerticalAlignment="Center"
                            Text="" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid RowDefinitions="80,50,*,50,50">
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,200"
              VerticalAlignment="Top" 
              Margin="20,10,20,10">
            <StackPanel Grid.Column="0">
                <Label Target="{Binding ElementName=txtPath}" 
                       Content="Path:"/>
                <TextBox IsReadOnly="{Binding IsDownloading,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                         Text="{Binding DestinationPath}"
                         Background="White"
                         Margin="0,0,20,0"
                         Height="30" FontSize="18"
                         Name="txtPath"/>
            </StackPanel>
            <Button mah:ControlsHelper.CornerRadius="2"
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    Command="{Binding GetDestinationPathCommand}" Grid.Column="1" Height="50"
                    BorderBrush="#93a98f"
                    BorderThickness="2"
                    FontSize="16"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="Select" 
                                Foreground="#337287"
                                Margin="0,0,8,0" 
                                VerticalAlignment="Center" />
                    <iconPacks:PackIconFontAwesome Kind="FolderClosedSolid" 
                                                   Foreground="#337287"  
                                                   VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
        <Grid Grid.Row="1" 
              Margin="20,0,20,10">
            <Button mah:ControlsHelper.CornerRadius="2"
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding ShowSearchGalleryDialogCommand}"
                    BorderBrush="#93a98f"
                    BorderThickness="2"
                    FontSize="16"
                    Cursor="Hand" 
                    Margin="20,0,20,0" 
                    Content="Get from gallery"/>
        </Grid>
        <Grid Grid.Row="2" 
              ColumnDefinitions="150,*" >
            <StackPanel Grid.Column="0" 
                        Margin="10,20,0,0">
                <Button mah:ControlsHelper.ContentCharacterCasing="Upper"
                        mah:ControlsHelper.FocusBorderBrush="#93a98f"
                        mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                        Command="{Binding SelectAllArtCommand}"
                        Foreground="#337287"
                        Cursor="Hand"
                        Margin="0,0,0,20" Height="30"
                        Content="Select all art"/>
                <Button mah:ControlsHelper.ContentCharacterCasing="Upper"
                        mah:ControlsHelper.FocusBorderBrush="#93a98f"
                        mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                        Command="{Binding SelectAllLiteratureCommand}"
                        Foreground="#337287"
                        Cursor="Hand"
                        Margin="0,0,0,20" 
                        Height="30"
                        Content="Select all literature"/>
                <Button mah:ControlsHelper.ContentCharacterCasing="Upper"
                        mah:ControlsHelper.FocusBorderBrush="#93a98f"
                        mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                        Command="{Binding SelectAllVideoCommand}"
                        Foreground="#337287"
                        Cursor="Hand"
                        Margin="0,0,0,20" 
                        Height="30"
                        Content="Select all video"/>
                <Button mah:ControlsHelper.ContentCharacterCasing="Upper"
                        mah:ControlsHelper.FocusBorderBrush="#93a98f"
                        mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                        Command="{Binding SelectAllCompletedCommand}"
                        Foreground="#337287"
                        Cursor="Hand"    
                        Margin="0,0,0,20"
                        Content="Select All Completed"/>
                <Button mah:ControlsHelper.ContentCharacterCasing="Upper"
                        mah:ControlsHelper.FocusBorderBrush="#93a98f"
                        mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                        Command="{Binding SelectAllFailCommand}"        
                        Foreground="#337287"
                        Cursor="Hand"  
                        Margin="0,0,0,20"
                        Content="Select All Fail"/>
                <Button mah:ControlsHelper.ContentCharacterCasing="Upper"
                        mah:ControlsHelper.FocusBorderBrush="#93a98f"
                        mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                        Command="{Binding ClearListCommand}"  
                        Foreground="Black"
                        Background="#e18d43"
                        Cursor="Hand"  
                        Margin="0,0,0,20" 
                        Content="Clear"/>
            </StackPanel>
            <mah:Badged Grid.Column="1"
                        BadgePlacementMode="TopLeft" Badge="{Binding DownloadList.Count}"
                        Margin="20,20,20,0" >
                <DataGrid ItemsSource="{Binding DownloadList,  UpdateSourceTrigger=PropertyChanged}"
                          Background="#f4f7f3" BorderBrush="Black" RowBackground="#f4f7f3" 
                          CanUserAddRows="False" ColumnHeaderHeight="40" RowHeight="40"
                          AutoGenerateColumns="False" SelectionMode="Single" 
                          SelectionUnit="Cell" CanUserResizeRows="False">
                    <DataGrid.ColumnHeaderStyle>
                        <Style BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}" 
                               TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="mah:ControlsHelper.ContentCharacterCasing" Value="Normal" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="50">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate >
                                    <CheckBox   Cursor="Hand"    
                                                Name="HeaderCheckBox" 
                                                IsChecked="{Binding DataContext.IsSelectAll, 
                                                            RelativeSource={RelativeSource AncestorType={x:Type DataGrid}, 
                                                                            Mode=FindAncestor}}" 
                                                HorizontalAlignment="Center"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox   Cursor="Hand"                  
                                                Margin="5,0,0,0"
                                                IsChecked="{Binding IsSelected, 
                                                            Mode=TwoWay, 
                                                            UpdateSourceTrigger=PropertyChanged}" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Author" 
                                            Binding="{Binding Deviant.Author.Username}" 
                                            IsReadOnly="True"  Width="120" />
                        <DataGridTextColumn Header="Deviation Name" 
                                            Binding="{Binding Deviant.Title}"  
                                            Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Type" 
                                            Binding="{Binding Deviant.Type}"  
                                            IsReadOnly="True" Width="60" />
                        <DataGridTextColumn Header="Date" 
                                            Binding="{Binding Deviant.PublishDate,StringFormat='dd/MM/yyyy'}"  
                                            IsReadOnly="True" Width="80" />
                        <DataGridTextColumn Header="Percent" 
                                            Binding="{Binding DisplayPercent}"  
                                            IsReadOnly="True" Width="70" />
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding Status}" 
                                            IsReadOnly="True" Width="100" />
                        <DataGridTextColumn Header="Speed" 
                                            Binding="{Binding DownloadSpeed}" 
                                            IsReadOnly="True" Width="80"  />
                        <DataGridTemplateColumn Header="" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Cursor="Hand" Foreground="#337287" Margin="5,0,5,0"  
                                            Command="{  Binding Path=DataContext.RemoveDeviantFromListCommand,       
                                                        RelativeSource= {RelativeSource FindAncestor,
                                                        AncestorType={x:Type DataGrid}}}" 
                                            CommandParameter="{Binding Path= Deviant.Id}" 
                                            Content="Remove"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </mah:Badged>
        </Grid>
        <Grid Grid.Row="3" Margin="0,0,0,0">
            <mah:MetroProgressBar IsIndeterminate="{Binding IsDownloading}"/>
        </Grid>
        <Grid Grid.Row="4">
            <Button Grid.Row="5" 
                    mah:ControlsHelper.ContentCharacterCasing="Upper" 
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    Command="{Binding DownloadDeviantCommand}"
                    Background="#00c787"
                    Cursor="Hand"
                    BorderBrush="#93a98f" 
                    BorderThickness="2"
                    Margin="20,0,20,10"
                    FontSize="18">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DownloadLabel}" 
                                Margin="0,0,8,0" 
                                VerticalAlignment="Center"/>
                <iconPacks:PackIconFontAwesome  Kind="DownloadSolid" 
                                                VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>
