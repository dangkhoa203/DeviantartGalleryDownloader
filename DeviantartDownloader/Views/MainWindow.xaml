<Window x:Class="DeviantartDownloader.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviantartDownloader"
        xmlns:vm="clr-namespace:DeviantartDownloader.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Deviantart Downloader" Height="750" Width="1000"
        Background="AntiqueWhite"
        WindowStartupLocation="CenterScreen"
        >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Top" Grid.Row="0" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Path:" Target="{Binding ElementName=txtPath}" />
                <TextBox Name="txtPath" IsReadOnly="{Binding IsDownloading,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Background="White"  Height="30" FontSize="18" Text="{Binding DestinationPath}"  Margin="0,0,20,0"/>
            </StackPanel>
            <Button Command="{Binding GetDestinationPathCommand}" Grid.Column="1" Height="50" Content= "Select"/>
        </Grid>
        <Grid Grid.Row="1" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding ShowSearchGalleryDialogCommand}" Margin="20,0,20,0" Grid.Column="0" Content="Get from gallery"/>
            <Button Margin="20,0,20,0" Command="{Binding ClearListCommand}"  Grid.Column="1" Content="Clear"/>
        </Grid>
        <Grid Grid.Row="2" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Width="300" Command="{Binding ShowSettingDialogCommand}" Margin="0,0,0,0" Grid.Column="0" Content="Setting"/>
            <Button Width="300" Command="{Binding ClearCompletedFromListCommand}" Margin="0,0,0,0" Grid.Column="1" Content="Clear all completed"/>
        </Grid>
        <Grid Grid.Row="3">
            <Grid Margin="20,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0">Total:</TextBlock>
                <TextBlock Grid.Column="1" Text="{Binding DownloadList.Count}"/>
            </Grid>
        <DataGrid 
          
       CanUserAddRows="False" RowHeight="30" ItemsSource="{Binding DownloadList,  UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" Grid.Row="3" Margin="20,20,20,20" SelectionMode="Single" CanUserResizeRows="False">
                <DataGrid.Columns>
                    <!-- Other DataGridTextColumns can go here -->
                    <DataGridTextColumn IsReadOnly="True" Binding="{Binding Deviant.Author.Username}" Width="200" Header="Author"/>


                    <DataGridTextColumn IsReadOnly="True" Binding="{Binding Deviant.Title}"  Width="*" Header="Deviation Name"/>


                    <DataGridTextColumn IsReadOnly="True" Width="60" Binding="{Binding Deviant.Type}" Header="Type"/>


                    <DataGridTextColumn IsReadOnly="True" Width="60" Binding="{Binding DisplayPercent}" Header="Percent"/>


                    <DataGridTextColumn IsReadOnly="True" Width="100" Binding="{Binding Status}" Header="Status"/>


                    <DataGridTextColumn IsReadOnly="True" Width="80" Binding="{Binding DownloadSpeed}" Header="Speed"/>


                    <DataGridTemplateColumn Header="" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding Path=DataContext.RemoveDeviantFromListCommand,       
                            RelativeSource= {RelativeSource FindAncestor,
                            AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding Path= Deviant.Id}" Content="Remove"  />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="4" Margin="20,0,20,20">
            <ProgressBar IsIndeterminate="{Binding IsDownloading}"/>
        </Grid>
        <Grid Grid.Row="5">
            <Button Margin="20,0,20,10" Width="300" Command="{Binding DonwloadDeviantCommand}"  Content="{Binding DownloadLabel}"/>
        </Grid>
    </Grid>
</Window>
