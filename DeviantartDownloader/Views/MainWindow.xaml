<mah:MetroWindow x:Class="DeviantartDownloader.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviantartDownloader"
        xmlns:vm="clr-namespace:DeviantartDownloader.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Deviantart Downloader" Height="750" Width="1000"
        Background="#d4dfd0"
        WindowStartupLocation="CenterScreen"
        WindowTitleBrush="#06070d"
                 BorderBrush="Black"
        >
    <mah:MetroWindow.Resources>
        <CollectionViewSource x:Key="downloadViewItems" Source="{Binding DownloadList}"/>
    </mah:MetroWindow.Resources>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Content="">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome Width="22"
                                    Height="22"
                                    VerticalAlignment="Center"
                                    Kind="DeviantartBrands" />
                            <TextBlock Margin="4 0 0 0"
                     VerticalAlignment="Center"
                     Text="" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Command="{Binding ShowSettingDialogCommand}"  Content="">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome Width="22"
                                        Height="22"
                                        VerticalAlignment="Center"
                                        Kind="WrenchSolid" />
                            <TextBlock Margin="4 0 0 0"
                         VerticalAlignment="Center"
                         Text="" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Top" Grid.Row="0" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Path:" Target="{Binding ElementName=txtPath}" />
                <TextBox Name="txtPath" IsReadOnly="{Binding IsDownloading,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Background="White"  Height="30" FontSize="18" Text="{Binding DestinationPath}"  Margin="0,0,20,0"/>
            </StackPanel>
            <Button
                 mah:ControlsHelper.CornerRadius="2"
                 mah:ControlsHelper.ContentCharacterCasing="Upper"
                 mah:ControlsHelper.FocusBorderBrush="#93a98f"
                 mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                 BorderBrush="#93a98f"
                 BorderThickness="2"
                 Cursor="Hand"
                Command="{Binding GetDestinationPathCommand}" Grid.Column="1" Height="50" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Select" 
           Foreground="#337287"
            Margin="0,0,8,0" 
            VerticalAlignment="Center" />
                    <iconPacks:PackIconFontAwesome Foreground="#337287" Kind="FolderClosedSolid" 
            VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
        <Grid Grid.Row="1" Margin="20,0,20,10">
            <Button
                mah:ControlsHelper.CornerRadius="2"
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    BorderBrush="#93a98f"
                    BorderThickness="2"
                    FontSize="16"
                    Cursor="Hand"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                Command="{Binding ShowSearchGalleryDialogCommand}" Margin="20,0,20,0" Grid.Column="0" Content="Get from gallery"/>
        </Grid>
        <Grid ColumnDefinitions="150,*" Grid.Row="2">
            <StackPanel Grid.Column="0" Margin="10,20,0,0">
                <Button
        mah:ControlsHelper.ContentCharacterCasing="Upper"
        mah:ControlsHelper.FocusBorderBrush="#93a98f"
        mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
       Foreground="#337287"
        Cursor="Hand"
        Command="{Binding SelectAllArtCommand}" Margin="0,0,0,20" Height="30">
                    Select all art
                </Button>
                <Button 
                     mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    Foreground="#337287"
                    Cursor="Hand"
                    Command="{Binding SelectAllLiteratureCommand}" Margin="0,0,0,20" Height="30">Select all literature</Button>
                <Button
         mah:ControlsHelper.ContentCharacterCasing="Upper"
         mah:ControlsHelper.FocusBorderBrush="#93a98f"
         mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
         Foreground="#337287"
         Cursor="Hand"
        Command="{Binding SelectAllVideoCommand}" Margin="0,0,0,20" Height="30">Select all video</Button>
                <Button
mah:ControlsHelper.ContentCharacterCasing="Upper"
mah:ControlsHelper.FocusBorderBrush="#93a98f"
mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
Foreground="#337287"
Cursor="Hand" Command="{Binding SelectAllCompletedCommand}"   Margin="0,0,0,20" >Select All Completed</Button>
                <Button
mah:ControlsHelper.ContentCharacterCasing="Upper"
mah:ControlsHelper.FocusBorderBrush="#93a98f"
mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
Foreground="#337287"
Cursor="Hand" Command="{Binding SelectAllFailCommand}"   Margin="0,0,0,20" >Select All Fail</Button>
                <Button
         mah:ControlsHelper.ContentCharacterCasing="Upper"
         mah:ControlsHelper.FocusBorderBrush="#93a98f"
         mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
         Foreground="Black"
                    Background="#e18d43"
         Cursor="Hand" Name="Btn_Clear" Command="{Binding ClearListCommand}"   Margin="0,0,0,20" >Clear</Button>
            </StackPanel>
            <mah:Badged Grid.Column="1" Margin="20,20,20,0" BadgePlacementMode="TopLeft" Badge="{Binding DownloadList.Count}">
                <DataGrid 
            Background="#f4f7f3" BorderBrush="Black"  RowBackground="#f4f7f3" 
                  CanUserAddRows="False" ColumnHeaderHeight="40" RowHeight="40"
            ItemsSource="{Binding DownloadList,  UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False"   SelectionMode="Single" SelectionUnit="Cell" CanUserResizeRows="False">
                    <DataGrid.ColumnHeaderStyle>
                        <Style BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}" 
                TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="mah:ControlsHelper.ContentCharacterCasing" Value="Normal" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="50">

                            <!-- Header Template with the CheckBox -->
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate >
                                    <CheckBox 
        Cursor="Hand"
        Name="HeaderCheckBox" 
        IsChecked="{Binding DataContext.IsSelectAll, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}, Mode=FindAncestor}}" 
        HorizontalAlignment="Center"
        Margin="5,0,0,0"
        VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>

                            <!-- Cell Template for individual row checkboxes -->
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox 
            Cursor="Hand"
            Margin="5,0,0,0"
            IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>
                        <!-- Other DataGridTextColumns can go here -->
                        <DataGridTextColumn IsReadOnly="True" Binding="{Binding Deviant.Author.Username}" Width="120" Header="Author"/>


                        <DataGridTextColumn IsReadOnly="True" Binding="{Binding Deviant.Title}"  Width="*" Header="Deviation Name"/>


                        <DataGridTextColumn IsReadOnly="True" Width="60" Binding="{Binding Deviant.Type}" Header="Type"/>
                        <DataGridTextColumn Foreground="Black" IsReadOnly="True" Width="80" Binding="{Binding Deviant.PublishDate,StringFormat='dd/MM/yyyy'}" Header="Date"/>

                        <DataGridTextColumn IsReadOnly="True" Width="70" Binding="{Binding DisplayPercent}" Header="Percent"/>


                        <DataGridTextColumn IsReadOnly="True" Width="100" Binding="{Binding Status}" Header="Status"/>


                        <DataGridTextColumn IsReadOnly="True" Width="80" Binding="{Binding DownloadSpeed}" Header="Speed"/>


                        <DataGridTemplateColumn Header="" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Cursor="Hand" Foreground="#337287" Margin="5,0,5,0"  Command="{Binding Path=DataContext.RemoveDeviantFromListCommand,       
            RelativeSource= {RelativeSource FindAncestor,
            AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding Path= Deviant.Id}" Content="Remove"  />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </mah:Badged>
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,0">
            <mah:MetroProgressBar IsIndeterminate="{Binding IsDownloading}"/>
        </Grid>
        <Grid Grid.Row="4">
            <Button Margin="20,0,20,10"
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                mah:ControlsHelper.FocusBorderBrush="#93a98f"
                mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                Background="#00c787"
                Cursor="Hand"
                BorderBrush="#93a98f" Name="Btn_Submit" Grid.Row="5" 
                BorderThickness="2"
                FontSize="18"
                    Command="{Binding DownloadDeviantCommand}"  >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DownloadLabel}" 
                   Margin="0,0,8,0" 
                   VerticalAlignment="Center" />
                <iconPacks:PackIconFontAwesome Kind="DownloadSolid" 
                                     VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>
