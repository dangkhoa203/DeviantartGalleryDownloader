<Window x:Class="DeviantartDownloader.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviantartDownloader"
        xmlns:vm="clr-namespace:DeviantartDownloader.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000"
        Background="AntiqueWhite"
        WindowStartupLocation="CenterScreen"
        >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Top" Grid.Row="0" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Path:" Target="{Binding ElementName=txtPath}" />
                <TextBox Name="txtPath" IsReadOnly="{Binding isDownloading}" Background="White"  Height="30" FontSize="18" Text="{Binding DownloadPath}"  Margin="0,0,20,0"/>
            </StackPanel>
            <Button Command="{Binding GetDownloadPathCommand}" Grid.Column="1" Height="50" Content= "Path"/>
        </Grid>
        <Grid Grid.Row="1" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding GetGalleryDialogCommand}" Margin="20,0,20,0" Grid.Column="0" Content="Get from gallery"/>
            <Button Margin="20,0,20,0" Command="{Binding ClearListCommand}"  Grid.Column="1" Content="Clear"/>
        </Grid>
        <Grid Grid.Row="2">
            <DataGrid  VirtualizingStackPanel.IsVirtualizing="True"
          VirtualizingStackPanel.VirtualizationMode="Recycling"
          ScrollViewer.CanContentScroll="True"  CanUserAddRows="False" RowHeight="30" ItemsSource="{Binding Deviants, Mode=TwoWay}" AutoGenerateColumns="False" Grid.Row="3" Margin="20,20,20,20" SelectionMode="Single" CanUserResizeRows="False">
                <DataGrid.Columns>
                    <!-- Other DataGridTextColumns can go here -->
                    <DataGridTextColumn IsReadOnly="True" Binding="{Binding Deviant.Author.Username}" Width="200" Header="Author">

                    </DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Binding="{Binding Deviant.Title}"  Width="*" Header="Deviation Name">

                    </DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Width="60" Binding="{Binding Deviant.Type}" Header="Type">

                    </DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Width="60" Binding="{Binding Percent , StringFormat=F2}" Header="Percent">

                    </DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Width="60" Binding="{Binding Status}" Header="Status">

                    </DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Width="80" Binding="{Binding Speed}" Header="Speed">

                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding Path=DataContext.RemoveDeviantFromListCommand,       
                            RelativeSource= {RelativeSource FindAncestor,
                            AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding Path= Deviant.Deviationid}" Content="Remove"  />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="3" Margin="20,0,20,20">
            <ProgressBar IsIndeterminate="{Binding isDownloading}"/>
        </Grid>
        <Grid Grid.Row="4">
            <Button Margin="20,0,20,10" Width="300" Command="{Binding DonwloadDeviantCommand}"  Content="Download"/>
        </Grid>
    </Grid>
</Window>
