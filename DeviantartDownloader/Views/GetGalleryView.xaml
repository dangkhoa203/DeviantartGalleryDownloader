<mah:MetroWindow x:Class="DeviantartDownloader.Views.GetGalleryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviantartDownloader.Views" xmlns:viewmodels="clr-namespace:DeviantartDownloader.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:GetGalleryViewModel}"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Background="#d4dfd0"
        WindowStartupLocation="CenterScreen"
        WindowTitleBrush="#06070d"
        BorderBrush="Black"
        Title="Search Gallery" Height="800" Width="1000"
                                  xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
Dialog:DialogParticipation.Register="{Binding}"
                 >
    <mah:MetroWindow.Resources>
        <CollectionViewSource x:Key="deviantViewItems" Source="{Binding Deviants}"/>
    </mah:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Top" Grid.Row="0" Margin="20,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Search from username:" Target="{Binding ElementName=textUsername}" />
                <TextBox Name="textUsername" Background="#f4f7f3"   Height="35" FontSize="18" Text="{Binding SearchUserName,UpdateSourceTrigger=PropertyChanged}"  Margin="20,0,20,0">
                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding Path=GetFolderCommand}" Key="Enter" />
                    </TextBox.InputBindings>
                </TextBox>
            </StackPanel>
            <Button 
                    mah:ControlsHelper.CornerRadius="2"
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    BorderBrush="#93a98f"
                    BorderThickness="2"
                    Cursor="Hand"
                Command="{Binding GetFolderCommand}" Grid.Column="1" Height="35" VerticalAlignment="Bottom" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding SearchFolderLabel}" 
                           Foreground="#337287"
                            Margin="0,0,8,0" 
                            VerticalAlignment="Center" />
                    <iconPacks:PackIconFontAwesome Foreground="#337287" Kind="MagnifyingGlassSolid" 
                            VerticalAlignment="Center" /> 
                </StackPanel>
            </Button>
        </Grid>
        <StackPanel Grid.Row="1" Margin="20,0,20,0">
            <Label Content="User folder" Target="{Binding ElementName=cbFolder}" />
            <Grid  Margin="20,0,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Margin="0,0,10,0">Selected user:</TextBlock>
                <TextBlock Margin="10,0,0,0" Grid.Column="1" Text="{Binding SelectedUsername}"/>
                <Button
                    Cursor="Hand"
                    Command="{Binding ResetUserCommand ,UpdateSourceTrigger=PropertyChanged}" Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Reset" 
                                   Foreground="Red"
                                    Margin="0,0,8,0" 
                                    VerticalAlignment="Center" />       
                        <iconPacks:PackIconFontAwesome Foreground="Red" Kind="CircleMinusSolid" 
                          VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>
            <ComboBox 
                Cursor="Hand"
                mah:TextBoxHelper.Watermark="Empty"
                Background="#f4f7f3"
                IsSynchronizedWithCurrentItem="True"
                Name="cbFolder"
                ItemsSource="{Binding SearchResultFolders}"
                DisplayMemberPath="DisplayName"
                SelectedValuePath="Id"
                SelectedItem="{Binding SelectedFolder,Mode=TwoWay}"
                Margin="20,0,20,0"
                IsEnabled="{Binding IsComboBoxEnabled}"
                >
                
            </ComboBox>
        </StackPanel>
        <Grid Grid.Row="2">
            <Button mah:ControlsHelper.CornerRadius="2"
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    BorderBrush="#93a98f"
                    BorderThickness="2"
                    FontSize="16"
                    Cursor="Hand"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Name="Btn_AddList"   Grid.Column="1" Margin="40,10,40,10"
                    Command="{Binding GetDeviantCommand}" Content="{Binding SearchDeviantLabel,Mode=TwoWay }"/>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="10,20,0,20">
                <Button
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                   Foreground="#337287"
                    Cursor="Hand"
                    Command="{Binding SelectAllArtCommand}" Margin="0,0,0,20" Height="30">
                    Select all art
                </Button>
                <Button 
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    Foreground="#337287"
                    Cursor="Hand"
                    Command="{Binding SelectAllLiteratureCommand}" Margin="0,0,0,20" Height="30">Select all literature</Button>
                <Button
                     mah:ControlsHelper.ContentCharacterCasing="Upper"
                     mah:ControlsHelper.FocusBorderBrush="#93a98f"
                     mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                     Foreground="#337287"
                     Cursor="Hand"
                    Command="{Binding SelectAllVideoCommand}" Margin="0,0,0,20" Height="30">Select all video</Button>
                <Button
                     mah:ControlsHelper.ContentCharacterCasing="Upper"
                     mah:ControlsHelper.FocusBorderBrush="#93a98f"
                     mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                     Foreground="Black"
                     Background="#e18d43"
                     Cursor="Hand" Name="Btn_Clear" Command="{Binding ClearListCommand}"   Margin="0,0,0,20" >Clear</Button>
            </StackPanel>
            <Grid Grid.Column="1"  Margin="20,20,20,20">
                <mah:Badged  BadgePlacementMode="TopLeft" Badge="{Binding Deviants.Count}">
                    <DataGrid Background="#f4f7f3" BorderBrush="Black"  RowBackground="#f4f7f3" 
                              CanUserAddRows="False" ColumnHeaderHeight="40" RowHeight="40" ItemsSource="{Binding Deviants}" AutoGenerateColumns="False"
                              Margin="0,0,0,0" SelectionMode="Single" SelectionUnit="Cell" CanUserResizeRows="False"
                              >
                        <DataGrid.ColumnHeaderStyle>
                            <Style BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}" 
                                TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="mah:ControlsHelper.ContentCharacterCasing" Value="Normal" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="50">

                                <!-- Header Template with the CheckBox -->
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate >
                                        <CheckBox 
                                            Cursor="Hand"
                                            Name="HeaderCheckBox" 
                                            IsChecked="{Binding DataContext.IsSelectAll, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}, Mode=FindAncestor}}" 
                                            HorizontalAlignment="Center"
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>

                                <!-- Cell Template for individual row checkboxes -->
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox 
                                                Cursor="Hand"
                                                Margin="5,0,0,0"
                                                IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>

                            <!-- Other DataGridTextColumns can go here -->
                            <DataGridTextColumn Foreground="Black" IsReadOnly="True" Binding="{Binding Author.Username}" Width="120" Header="Author">
                               
                            </DataGridTextColumn>
                            <DataGridTextColumn  Foreground="Black" IsReadOnly="True" Binding="{Binding Title}"  Width="*" Header="Deviation Name">
                                
                            </DataGridTextColumn>
                            <DataGridTextColumn Foreground="Black" IsReadOnly="True" Width="60" Binding="{Binding Type}" Header="Type">
                            
                            </DataGridTextColumn>
                            <DataGridTextColumn Foreground="Black" IsReadOnly="True" Width="80" Binding="{Binding PublishDate,StringFormat='dd/MM/yyyy'}" Header="Date">

                            </DataGridTextColumn>
                           
                            <DataGridTemplateColumn Header="" CanUserSort="False" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Cursor="Hand" Foreground="#337287" Margin="5,0,5,0" Command="{Binding Path=DataContext.RemoveDeviantFromListCommand,       
                                            RelativeSource= {RelativeSource FindAncestor,
                                            AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding Path=Id}" Content="Remove"  />             
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                       
                    </DataGrid>
                </mah:Badged>
                
            </Grid>
        </Grid>
        <Button mah:ControlsHelper.ContentCharacterCasing="Upper"
                mah:ControlsHelper.FocusBorderBrush="#93a98f"
                mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                Background="#00c787"
                Cursor="Hand"
                BorderBrush="#93a98f" Name="Btn_Submit" Grid.Row="5" Margin="10,0,10,10"
                BorderThickness="2"
                FontSize="18"
                Command="{Binding SubmitToDownloadListCommand}">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Add to download list" 
                   Margin="0,0,8,0" 
                   VerticalAlignment="Center" />
                <iconPacks:PackIconFontAwesome Kind="PlusSolid" 
                                     VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </Grid>
</mah:MetroWindow>
